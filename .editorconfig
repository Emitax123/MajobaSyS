root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{py,pyw}]
indent_size = 4
max_line_length = 100

[*.{html,css,scss,sass,js,json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.bat]
end_of_line = crlf

[Makefile]
indent_style = tab
